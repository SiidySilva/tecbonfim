<!--Modal Login-->
<!-- BEGIN # MODAL LOGIN -->
<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true" style="display: none;">
  <div class="modal-dialog">
    <div class="modal-content">
      <!-- Begin # DIV Form -->
      <div id="div-forms">

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), :html => {:id => "login-form"}) do |f| %>

          <div class="text-center mt-4">
            <h3><b>Entrar</b></h3>
          </div>
          <div class="modal-body">
            <div class="field form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :Senha %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
            </div>

            <% if devise_mapping.rememberable? -%>
              <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :remember_me %>
              </div>
            <% end -%>
          </div>
          <div class="modal-footer">
            <div class="actions">
            <%= f.submit "Entrar", class: "btn btn-success btn-block" %>
          </div>
            <div>
              <button id="login_register_btn" type="button" class="btn btn-link">Cadastrar</button>
            </div>
          </div>
        <% end %>




        <!-- Begin | Register Form -->

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:id => "register-form"}) do |f|  %>

          <div class="text-center mt-4">
            <h3><b>Cadastrar</b></h3>
          </div>

          <div class="modal-body">
            <div class="field form-group">
              <%= f.label :nome %>
              <%= f.text_field :nome, class: "form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :cpf %>
              <%= f.text_field :cpf, class: "form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :email %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :Senha %>
              <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %><br />
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
            </div>

            <div class="field form-group">
              <%= f.label :Confirmação_Senha %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
          </div>
          <div class="modal-footer">
            <div class="actions">
              <%= f.submit "Cadastrar", class: "btn btn-success btn-block" %>
            </div>
            <div>
              <button id="register_login_btn" type="button" class="btn btn-link">Entrar</button>
            </div>
          </div>
        <% end %>
        <!-- End | Register Form -->

      </div>
      <!-- End # DIV Form -->

    </div>
  </div>
</div>
<!-- END # MODAL LOGIN -->
