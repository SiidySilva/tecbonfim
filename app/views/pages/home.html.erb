<!-- Start price Area -->
<section class="price-area section-gap" id="cursos">
  <div class="container">
    <div class="row d-flex justify-content-center">
      <div class="menu-content pb-70 col-lg-8">
        <div class="title text-center">
          <h1 class="mb-10">Mini Cursos e Oficinas</h1>
          <p>Participantes só poderá ser inscrito em apenas 1 mini curso.</p>
          <h4 class="notice"><%= notice %></h4>
        </div>
      </div>
    </div>
    <div class="row">
      <% number = 0 %>
      <% @oficinas.each do |oficina| %>
        <% number = number+1 %>
        <!-- Start Single Curso-->
        <div class="col-lg-3 col-md-6 single-price"
             data-toggle="tooltip"
             data-html="true"
             title="<%= oficina.descricao %>">


          <div class="top-part">
            <h1 class="package-no"><%= number %></h1>
            <h4><%= oficina.titulo %></h4>
          </div>
          <div class="package-list">
            <ul>
              <li><%= oficina.professor %></li>
              <li>Às: <%= oficina.inicio.strftime("%H:%M") %></li>
              <li>Termino: <%= oficina.termino.strftime("%H:%M") %></li>
            </ul>
          </div>
          <div class="bottom-part">
            <% if user_signed_in? %>

              <%= form_with(model: current_user, local: true) do |form| %>
                <%= form.hidden_field :oficina_id, value: oficina.id  %>
                <div class="actions">
                  <% if current_user.oficina_id == oficina.id %>
                    <%= form.submit "Matriculado", class: "price-btn text-uppercase", disabled: true %>
                  <% else %>
                    <%= form.submit "Matricular", class: "price-btn text-uppercase" %>
                  <% end %>

                </div>
              <% end %>

            <% else %>
              <a class="price-btn text-uppercase" href="#" data-toggle="modal" data-target="#login-modal">Entrar</a>
              <p>Necessario entrar em seu cadastro para matricular-se</p>
            <%end %>
          </div>
        </div>
        <!--/single curso -->
      <% end %>

    </div>

  </div>

</section>
<!-- End price Area -->


